@model IEnumerable<Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-sm-6">
           <div class="row p-2">
               <div class="col-12 p-1">
                   <div class="card p-3 shadow rounded">
                       <img src="@product.ImageUrl" class="card-img-top rounded" />
                       <div class="card-body">
                           <div class="pl-1">
                               <p class="card-title h5 text-dark opacity-75 text-center">@product.Title</p>
                               <p class="card-title text-warning text-center">by @product.Author</p>
                           </div>
                           <div class="pl-1">
                               <p class="text-dark opacity-75 text-center mb-0">
                                   Price: @product.ListPrice.ToString("c")
                                </p>
                           </div>
                            <div class="pl-1">
                                <p class="text-dark opacity-75 text-center">Get this at: @product.Price100.ToString("c")</p>
                            </div>
                       </div>
                       <div>
                           <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">
                               Details
                           </a>
                       </div>
                   </div>
               </div>
           </div>
        </div>
    }
</div>