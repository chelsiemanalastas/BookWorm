@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr/>
        </div>
        <div class="mb-3 row">
            <label>Category Name</label>
            <input type="text" class="form-control"/>
        </div>
        <div class="mb-3 row">
            <label>Display Order</label>
            <input type="text" class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <buton type="submit" class="btn btn-primary w-100">Create</buton>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary w-100">Back to List</a>
            </div>
        </div>
    </div>
</form>