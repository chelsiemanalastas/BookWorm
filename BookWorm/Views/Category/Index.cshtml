@model List<Category>



<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New Category
            </a>
        </div>
    </div>
    <table class="table table-boredered table-striped">
        <thead>
            <tr>
                <th>Category</th>
                <th>Order</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.Name))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2" title="Edit">
                                <i class="bi bi-pencil-fill"></i> 
                            </a>
                            <a asp-controller="Category" asp-action="Delete" class="btn btn-secondary mx-2" title="Delete">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
